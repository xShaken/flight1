@model flight.Models.Flight

@{
    ViewData["Title"] = "Create Flight";
}

<h2>Create Flight</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FlightNumber"></label>
        <input asp-for="FlightNumber" class="form-control" required />
        <span asp-validation-for="FlightNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AirlineId"></label>
        <select asp-for="AirlineId" class="form-control" asp-items="ViewBag.Airlines" required>
            <option value="">-- Select Airline --</option>
        </select>
        <span asp-validation-for="AirlineId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureAirportId"></label>
        <select asp-for="DepartureAirportId" class="form-control" asp-items="ViewBag.Airports" required>
            <option value="">-- Select Departure Airport --</option>
        </select>
        <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalAirportId"></label>
        <select asp-for="ArrivalAirportId" class="form-control" asp-items="ViewBag.Airports" required>
            <option value="">-- Select Arrival Airport --</option>
        </select>
        <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureTime"></label>
        <input asp-for="DepartureTime" type="datetime-local" class="form-control" required />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalTime"></label>
        <input asp-for="ArrivalTime" type="datetime-local" class="form-control" required />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" required>
            <option value="Scheduled">Scheduled</option>
            <option value="Delayed">Delayed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Flight</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
