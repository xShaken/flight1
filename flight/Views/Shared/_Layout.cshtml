﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirVista</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="d-flex flex-column" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white sidebar" id="sidebar-wrapper">
            <!-- Sidebar Toggle Button - Moved to Top -->
            <button class="btn btn-sm btn-light sidebar-toggle" id="sidebar-toggle"><i class="bi bi-list"></i></button>

            <div class="sidebar-header">
                <span class="fs-4 fw-bold sidebar-title"><i class="bi bi-airplane"></i> AirVista</span>
            </div>






            @if (User.IsInRole("Admin"))
            {
                <div class="admin-info">
                    <i class="bi bi-person-circle fs-2"></i>
                    <p class="mb-0">Admin</p>
                </div>

                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Dashboard", "Home")" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="bi bi-house-door"></i> <span>Home</span>
                    </a>
                    <a href="@Url.Action("Index", "Flight")" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="bi bi-airplane"></i> <span>Flights</span>
                    </a>
                    <a href="@Url.Action("Index", "Airport")" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="bi bi-building"></i> <span>Airports</span>
                    </a>
                    <a href="@Url.Action("Index", "Airline")" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="bi bi-briefcase"></i> <span>Airlines</span>
                    </a>
                </div>
            }

            @if (User.IsInRole("User"))
            {
                <a href="@Url.Action("Index", "Booking")" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-person"></i> <span>User Dashboard</span>
                </a>

            }


                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="list-group-item list-group-item-action bg-dark text-danger border-0" style="background: none; color: red;">
                        <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
                    </button>
                </form>

            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid p-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - AirVista - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("sidebar-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>