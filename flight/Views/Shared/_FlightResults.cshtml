@model List<flight.Models.Flight>

@if (Model.Count == 0)
{
    <p>No flights available for the selected route.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>Airline</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Business Price</th>
                <th>Economy Price</th>
                <th>First Class Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.Airline.Name</td>
                    <td>@flight.DepartureAirport.Name (@flight.DepartureDateTime)</td>
                    <td>@flight.ArrivalAirport.Name (@flight.EstimatedArrivalDateTime)</td>
                    <td>$@flight.BusinessClassPrice</td>
                    <td>$@flight.EconomyClassPrice</td>
                    <td>$@flight.FirstClassPrice</td>
                    <td>
                        <a href="@Url.Action("Book", "Booking", new { flightId = flight.Id })" class="btn btn-primary">
                            Book Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
