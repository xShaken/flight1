@model List<flight.Models.Flight>

@if (Model.Any())
{
    <table class="table table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Flight No.</th>
                <th>Airline</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Seats & Prices</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td><strong>@flight.FlightNumber</strong></td>
                    <td>@flight.Airline.Name</td>
                    <td>
                        <i class="bi bi-airplane-fill"></i>
                        @flight.DepartureAirport.Name <br />
                        <small class="text-muted">@flight.DepartureDateTime.ToString("f")</small>
                    </td>
                    <td>
                        <i class="bi bi-geo-alt-fill"></i>
                        @flight.ArrivalAirport.Name <br />
                        <small class="text-muted">@flight.EstimatedArrivalDateTime.ToString("f")</small>
                    </td>
                    <td>
                        @if (flight.EconomySeatsAvailable > 0)
                        {
                            <span class="badge bg-primary">
                                Economy: @flight.EconomySeatsAvailable seats - ₱@flight.EconomyClassPrice
                            </span>

                            <br />
                        }
                        @if (flight.BusinessSeatsAvailable > 0)
                        {
                            <span class="badge bg-success">
                                Business: @flight.BusinessSeatsAvailable seats - ₱@flight.BusinessClassPrice
                            </span>

                            <br />
                        }
                        @if (flight.FirstClassSeatsAvailable > 0)
                        {
                            <span class="badge bg-warning text-dark">
                                First Class: @flight.FirstClassSeatsAvailable seats - ₱@flight.FirstClassPrice
                            </span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Book", "Booking", new { id = flight.Id })" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-cart-check"></i> Book Now
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-warning text-center mt-3">
        <i class="bi bi-exclamation-triangle-fill"></i> No flights found for the selected criteria.
    </p>
}
