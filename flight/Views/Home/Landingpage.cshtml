@{
    ViewData["Title"] = "Landing Page";
    Layout = "~/Views/Shared/_Landingpagelayout.cshtml";
}
<!-- ***** Welcome Area Start ***** -->
<div class="welcome-area" id="welcome">

    <!-- ***** Header Text Start ***** -->
    <div class="header-text">
        <div class="container">
            <div class="row">
                <div class="left-text col-lg-6 col-md-12 col-sm-12 col-xs-12"
                     data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                    <h1>Book Your Next <em>Flight</em> With Ease</h1>
                    <p>
                        Experience hassle-free flight bookings with AirVista’s user-friendly platform. Compare top airlines and manage your reservations effortlessly.
                        Whether you're traveling for business or leisure, we ensure a smooth booking experience tailored to your needs.
                    </p>
                    <a href="#about" class="main-button-slider">EXPLORE MORE</a>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Header Text End ***** -->
</div>
<!-- ***** Welcome Area End ***** -->
<!-- ***** Features Big Item Start ***** -->
<section class="section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>01</h2>
                        <img src="assets/images/features-icon-1.png" alt="">
                        <h4>Easy Booking</h4>
                        <p>With AirVista, booking a flight is seamless and quick. Choose from multiple airlines, compare prices, and confirm your trip in just a few clicks.</p>
                        <a href="#testimonials" class="main-button">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>02</h2>
                        <img src="assets/images/features-icon-3.png" alt="">
                        <h4>Secure Payments</h4>
                        <p>Enjoy hassle-free and secure payment options. AirVista supports multiple payment methods, ensuring safe and smooth transactions for every booking.</p>
                        <a href="#testimonials" class="main-button">
                            Explore Now
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"
                 data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                <div class="features-item">
                    <div class="features-icon">
                        <h2>03</h2>
                        <img src="assets/images/features-icon-2.png" alt="">
                        <h4>Filter & Search</h4>
                        <p>Find the perfect flight effortlessly. Use our advanced filters to sort by airline, ticket price, departure time, or available seats.</p>
                        <a href="#testimonials" class="main-button">
                            View Features
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Features Big Item End ***** -->

<div class="left-image-decor"></div>

<!-- ***** Promotions Section Start ***** -->
<section class="section" id="promotion">
    <div class="container">
        <div class="row">
            <div class="left-image col-lg-5 col-md-12 col-sm-12 mobile-bottom-fix-big"
                 data-scroll-reveal="enter left move 30px over 0.6s after 0.4s">
                <img src="assets/images/deal.svg" class="rounded img-fluid d-block mx-auto" alt="Exclusive Deals">
            </div>
            <div class="right-text offset-lg-1 col-lg-6 col-md-12 col-sm-12 mobile-bottom-fix">
                <ul>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.4s">
                        <img src="assets/images/about-icon-01.png" alt="">
                        <div class="text">
                            <h4>Exclusive Deals & Discounts</h4>
                            <p>
                                Get access to the best travel deals with AirVista. Book flights at the lowest prices with seasonal discounts and special offers.
                            </p>
                        </div>
                    </li>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.5s">
                        <img src="assets/images/about-icon-02.png" alt="">
                        <div class="text">
                            <h4>Frequent Flyer Benefits</h4>
                            <p>
                                Join AirVista Rewards and earn miles every time you fly. Redeem them for discounts, free upgrades, and exclusive perks.
                            </p>
                        </div>
                    </li>
                    <li data-scroll-reveal="enter right move 30px over 0.6s after 0.6s">
                        <img src="assets/images/about-icon-03.png" alt="">
                        <div class="text">
                            <h4>24/7 Customer Support</h4>
                            <p>
                                Need help? Our dedicated customer support team is available round the clock to assist you with bookings, cancellations, and inquiries.
                            </p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ***** Promotions Section End ***** -->

<div class="right-image-decor"></div>

